<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.mavericklabs.mitra.ui.activity.SelectLanguageActivity">

    <include
        layout="@layout/centered_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/select_language_background"
        android:scaleType="centerCrop"
        />
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorTransparentWhite"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >
            <TextView
                android:id="@+id/select_english_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please Select Language"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/primary_text"
                />
            <TextView
                android:id="@+id/select_marathi_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="कृपया भाषा निवडा"
                android:layout_below="@+id/select_english_text"
                android:layout_marginTop="16dp"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/primary_text"
                />
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:layout_below="@+id/select_marathi_text"
                >

                <Button
                    android:id="@+id/select_english_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="English"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    android:textColor="@color/colorWhite"
                    android:layout_marginRight="8dp"
                    android:layout_marginEnd="8dp"
                    />

                <Button
                    android:id="@+id/select_marathi_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="मराठी"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:background="@color/colorAccent"
                    android:textColor="@color/colorWhite"
                    />
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/profile_photo_image_view"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:scaleType="centerCrop"
            />

        <RelativeLayout
            android:id="@+id/name_edit_text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_photo_image_view"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            >

            <EditText
                android:id="@+id/name_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:inputType="textCapWords"
                android:hint="@string/name"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_edit_text"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="@string/required_field"
                android:textColor="@color/color_teal"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_edit_text_layout"
            android:layout_marginTop="20dp"
            android:id="@+id/i_am_layout"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="4dp">

            <TextView
                android:id="@+id/i_am_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/i_am"
                android:textSize="18sp"
                android:textColor="@color/primary_text"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                />

            <Spinner
                android:id="@+id/i_am_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

        <View
            android:id="@+id/i_am_underline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/i_am_layout"
            android:background="@color/secondary_text"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/i_am_underline"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="@string/required_field"
            android:textColor="@color/color_teal"
            android:layout_marginTop="4dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/i_am_layout"
            android:layout_marginTop="40dp"
            android:id="@+id/district_layout"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="4dp">

            <TextView
                android:id="@+id/district_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/district"
                android:textSize="18sp"
                android:textColor="@color/primary_text"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                />

            <Spinner
                android:id="@+id/district_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

        <View
            android:id="@+id/district_underline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/district_layout"
            android:background="@color/secondary_text"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/district_underline"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="@string/required_field"
            android:textColor="@color/color_teal"
            android:layout_marginTop="4dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            />

        <EditText
            android:id="@+id/udise_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/district_underline"
            android:layout_marginTop="36dp"
            android:hint="@string/udise"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            />

        <EditText
            android:id="@+id/phone_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/udise_edit_text"
            android:layout_marginTop="36dp"
            android:hint="@string/phone_hint"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:inputType="number"
            tools:ignore="TextFields" />

        <ImageView
            android:id="@+id/less_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone_edit_text"
            android:src="@drawable/ic_expand_less_black_18dp"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            />

        <Button
            android:id="@+id/more_or_less_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone_edit_text"
            android:text="@string/more"
            android:layout_marginTop="16dp"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:textColor="@color/colorAccent"
            android:layout_centerHorizontal="true"
            />

        <ImageView
            android:id="@+id/more_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/more_or_less_button"
            android:src="@drawable/ic_expand_more_black_18dp"
            android:layout_centerHorizontal="true"
            />

        <!-- more layout -->
        <LinearLayout
            android:id="@+id/more_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/more_or_less_button"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/secondary_text"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/i_teach"
                android:textColor="@color/primary_text"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/subject_wrapper"
                    >

                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/subject_recycler_view"
                        android:layout_marginEnd="24dp"
                        android:layout_marginRight="24dp" />

                    <TextView
                        android:id="@+id/subject_placeholder_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/subject_s"
                        android:textColor="@color/secondary_text"
                        android:textSize="18sp"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/add_subjects"
                        android:src="@drawable/ic_add_accent_18dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/subject_wrapper"
                    android:background="@color/secondary_text"
                    android:layout_marginTop="4dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/grade_wrapper"
                    >

                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/grade_recycler_view"
                        android:layout_marginEnd="24dp"
                        android:layout_marginRight="24dp"
                        />

                    <TextView
                        android:id="@+id/grade_placeholder_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/grade_s"
                        android:textColor="@color/secondary_text"
                        android:layout_centerVertical="true"
                        android:textSize="18sp"
                        />

                    <ImageView
                        android:id="@+id/add_grades"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_add_accent_18dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/grade_wrapper"
                    android:background="@color/secondary_text"
                    android:layout_marginTop="4dp"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/secondary_text"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/interested_in_learning"
                android:layout_marginBottom="16dp"
                android:textColor="@color/primary_text"
                android:textSize="16sp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_add_accent_18dp"
                android:drawableRight="@drawable/ic_add_accent_18dp"
                android:hint="@string/topics"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_add_accent_18dp"
                android:drawableRight="@drawable/ic_add_accent_18dp"
                android:hint="@string/skills"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                />

        </LinearLayout>
    </RelativeLayout>
</ScrollView>
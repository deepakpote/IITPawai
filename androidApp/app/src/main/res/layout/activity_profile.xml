<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_accept_user_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="net.mavericklabs.mitra.ui.activity.ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/profile_photo_image_view"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:src="@drawable/scert_logo"
                />

            <EditText
                android:id="@+id/name_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_photo_image_view"
                android:layout_marginTop="16dp"
                android:hint="@string/name"
                android:drawableRight="@android:drawable/ic_menu_manage"
                android:drawableEnd="@android:drawable/ic_menu_manage"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_edit_text"
                android:layout_marginTop="16dp"
                android:id="@+id/i_am_layout"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                >

                <TextView
                    android:id="@+id/i_am_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/i_am"
                    android:textSize="18sp"
                    android:textColor="@color/primary_text"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/i_am_text_view"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/i_am_text_view"
                    />
            </RelativeLayout>

            <View
                android:id="@+id/i_am_underline"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/i_am_layout"
                android:background="@color/secondary_text"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/i_am_layout"
                android:layout_marginTop="24dp"
                android:id="@+id/district_layout"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                >

                <TextView
                    android:id="@+id/district_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/district"
                    android:textSize="18sp"
                    android:textColor="@color/primary_text"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/district_text_view"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/district_text_view"
                    />
            </RelativeLayout>

            <View
                android:id="@+id/district_underline"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/district_layout"
                android:background="@color/secondary_text"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                />

            <EditText
                android:id="@+id/udise_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/district_underline"
                android:layout_marginTop="16dp"
                android:hint="@string/udise"
                />

            <ImageView
                android:id="@+id/less_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/udise_edit_text"
                android:src="@drawable/ic_expand_less_black_18dp"
                android:layout_centerHorizontal="true"
                android:visibility="gone"
                />

            <Button
                android:id="@+id/more_or_less_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/udise_edit_text"
                android:text="@string/more"
                android:layout_marginTop="16dp"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:textColor="@color/colorAccent"
                android:layout_centerHorizontal="true"
                />

            <ImageView
                android:id="@+id/more_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/more_or_less_button"
                android:src="@drawable/ic_expand_more_black_18dp"
                android:layout_centerHorizontal="true"
                />

            <LinearLayout
                android:id="@+id/more_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/more_or_less_button"
                android:orientation="vertical"
                android:visibility="gone"
                >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/secondary_text"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/i_teach"
                    android:textColor="@color/primary_text"
                    android:layout_gravity="center"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp"
                    android:textSize="16sp"
                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    >

                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/subject_recycler_view"
                        android:layout_marginEnd="24dp"
                        android:layout_marginRight="24dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_menu_camera"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/subject_recycler_view"
                        android:background="@color/secondary_text"
                        android:layout_marginTop="4dp"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    >

                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/grade_recycler_view"
                        android:layout_marginEnd="24dp"
                        android:layout_marginRight="24dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_add_accent_18dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/grade_recycler_view"
                        android:background="@color/secondary_text"
                        android:layout_marginTop="4dp"
                        />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/secondary_text"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="32dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/i_am_interested_in_learning"
                    android:layout_marginBottom="16dp"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_add_accent_18dp"
                    android:drawableRight="@drawable/ic_add_accent_18dp"
                    android:hint="@string/topics"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_add_accent_18dp"
                    android:drawableRight="@drawable/ic_add_accent_18dp"
                    android:hint="@string/skills"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    />

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
